@model List<Cliente>;

    <div class="row">
        <div class="col-12  col-lg-6">
            <h1>Vista de Clientes</h1>
        </div>
        <div class="col-12  col-lg-6">
            <a asp-controller="Clientes" asp-action="Create" class="btn btn-success"> Nuevo</a>
        </div> 
    </div>


<table class="table">
    <tr>
        <th>Cliente</th>
        <th>Nombre</th>
        <th>RFC</th>
        <th>Correo</th>
        <th>Telefono</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.IdCliente</td>
            <td> @item.Nombre</td>
            <td> @item.RFC</td>
            <td> @item.Correo</td>
            <td> @item.Telefono</td>
            <td>
                <a asp-controller="Clientes" asp-action="edit" asp-route-id="@item.IdCliente" class="btn btn-warning" >
                    Modificar
                </a>
                <a asp-controller="Clientes" asp-action="delete" asp-route-id="@item.IdCliente" class="btn btn-danger">
                    Borrar
                </a>
            </td>
        </tr>

    }
</table>


<a asp-controller="Home" asp-action="Index" class="btn btn-primary" > Regresar</a>