@model Marca


<h1>Vista de nuevo Marca</h1>


<form asp-controller="Marcas" asp-action="Create" method="post">

        
        <input type="hidden" asp-for="IdMarca" class="form-control" />
   

    <div class="form-group">
        <label asp-for="Nombre" class="label-control"></label>
        <input type="text" asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
   

       <div class="form-group">
        <label asp-for="Activo" class="label-control"></label>
        <input  asp-for="Activo" class="form-control" />
        <span asp-validation-for="Activo" class="text-danger"></span>
    </div>
   
    <div class="form-group">
        <a asp-controller="Marcas" asp-action="Index" class="btn btn-secondary"  >Regresar</a>
        <input type="submit"  value="Guardar"  class="btn btn-primary" />
    </div>



</form>