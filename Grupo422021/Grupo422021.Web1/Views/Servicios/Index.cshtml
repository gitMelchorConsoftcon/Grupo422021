@model List<Servicio>;

    <div class="row">
        <div class="col-12  col-lg-6">
            <h1>Vista de Servicios</h1>
        </div>
        <div class="col-12  col-lg-6">
            <a asp-controller="Servicios" asp-action="Create" class="btn btn-success"> Nuevo</a>
        </div> 
    </div>


<table class="table">
    <tr>
        <th>Codigo</th>
        <th>Servicio</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td> @item.IdServicio</td>
            <td> @item.Nombre</td>
            <td>
                <a asp-controller="Servicios" asp-action="edit" asp-route-id="@item.IdServicio" class="btn btn-warning" >
                    Modificar
                </a>
                <a asp-controller="Servicios" asp-action="delete" asp-route-id="@item.IdServicio" class="btn btn-danger">
                    Borrar
                </a>
            </td>
        </tr>

    }
</table>


<a asp-controller="Home" asp-action="Index" class="btn btn-primary" > Regresar</a>